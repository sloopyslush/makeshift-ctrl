  },
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/EosFoundry/makeshift-ctrl/issues"
  },
  "homepage": "https://github.com/EosFoundry/makeshift-ctrl#readme",
  "config": {},
  "dependencies": {
    "@eos-makeshift/msg": "^1.3.2",
    "@eos-makeshift/serial": "^6.2.0",
    "@nut-tree/nut-js": "^3.1.1",
    "autoprefixer": "^10.4.14",
    "chalk": "^5.2.0",
    "chokidar": "^3.5.3",
    "colorjs.io": "^0.4.5",
    "defu": "^6.1.2",
    "electron-store": "^8.1.0",
    "fs-extra": "^11.1.1",
    "nanoid": "^4.0.2",
    "pathe": "^1.1.1",
    "postcss": "^8.4.24",
    "semver": "^7.5.1",
    "stylelint": "^15.9.0",
    "tailwindcss": "^3.3.2",
    "uuid": "^9.0.0",
    "vm2": "^3.9.19"
  },
  "devDependencies": {
    "@blockly/theme-dark": "^4.0.10",
    "@blockly/theme-modern": "^3.0.11",
    "@types/splitpanes": "^2.2.1",
    "@types/uuid": "^9.0.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "ace-builds": "^1.22.0",
    "blockly": "^9.3.3",
    "electron": "^24.4.1",
    "electron-builder": "^23.6.0",
    "highlight.js": "^11.8.0",
    "sass": "^1.62.1",
    "splitpanes": "^3.1.5",
